<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp" android:keepScreenOn="true" android:visibility="visible"
                android:gravity="center">

    <ImageView
            android:src="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/background" android:visibility="visible"
            android:backgroundTint="@color/black"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:src="@color/white" android:id="@+id/flashView"
            android:background="@color/white" android:visibility="invisible" android:adjustViewBounds="false"
            android:layout_marginTop="0dp" android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/arithTextView"
            android:textColor="@color/white"
            android:visibility="invisible" android:textSize="200sp"
            android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
            android:text="9+7" android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" android:textAlignment="center"
            android:gravity="center|center_horizontal|center_vertical"/>

</RelativeLayout>